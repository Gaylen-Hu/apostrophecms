# ApostropheCMS Environment Configuration
# Copy this file to .env and update with your values

# MongoDB Connection
# APOS_MONGODB_URI=mongodb://localhost:27017/apostrophecms-site

# Application Settings
# PORT=3000
# NODE_ENV=development

# Session Secret (change this to a random string in production)
# APOS_SESSION_SECRET=your-secret-here

# Upload Configuration
# APOS_UPLOADFS_LOCAL=true

# AWS S3 Configuration (if using S3 for uploads)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# APOS_S3_BUCKET=your-bucket-name

# Email Configuration (for user notifications)
# APOS_NODEMAILER_HOST=smtp.gmail.com
# APOS_NODEMAILER_PORT=587
# APOS_NODEMAILER_SECURE=false
# APOS_NODEMAILER_USER=your-email@gmail.com
# APOS_NODEMAILER_PASS=your-password